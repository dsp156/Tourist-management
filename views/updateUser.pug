html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    style
        include ../static/style.css
    script(src="https://kit.fontawesome.com/332a215f17.js" crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    title Intellegence Touriest Management
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href="#") Tour
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href="#")
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href="adminLoginPage") Admin
          li.float-right
            a.nav-link(href="/") Login
    .container.row
      .jumbotron.col-sm-4.pull-center
        form(action="/showAllUser/edit/", method="post" enctype = "multipart/form-data")
            .form-group
                label Username:
                input.form-control(required="" type="text" name="uname" value=customer.userName)
            .form-group
                label Email:
                input.form-control(required="" type="email" name="email" value=customer.email) 
            .form-group
                input.btn.btn-primary(type="submit" value="Sign Up")
