    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    title Hello, world!
  body
    h2.text-center
      | Here all Contact us data
    table.table.table-striped
      thead
        tr
          th(scope="col") Name
          th(scope="col") Email
          th(scope="col") Subject
          th(scope="col") Update
          th(scope="col") Delete
      tbody
        each n in list
          tr
            td=n.name
            td=n.email
            td=n.subject
            td  
              form(action="/updateEdit",method="post")
                input(type="hidden",name="id",value=n._id)
                button(class="btn")
                  | Edit
            td
              form(action="/deleteEdit",method="post")
                input(type="hidden",name="id",value=n._id)
                button(class="btn" onClick="return confirm('Are You sure want to delete');")
                  | Delete

