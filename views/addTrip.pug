doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      body {font-family: Arial, Helvetica, sans-serif;}
      * {box-sizing: border-box;}
      input[type=text], select, textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-top: 6px;
      margin-bottom: 16px;
      resize: vertical;
      }
      input[type=submit] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      }
      input[type=submit]:hover {
      background-color: #45a049;
      }
      .container {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
      }
  body
    h3 Contact Form
    .container
      form(action="/storeNewTrip", method="post" enctype = "multipart/form-data")
        label(for="name")  Name
        input#fname(type="text" name="name" placeholder="Your name..")
        label(for="destination_city") Destination City
        input#destination_city(type="text" name="destination_city" placeholder="Your destination_city ")
        label(for="starting_city") Starting City
        input#starting_city(type="text" name="starting_city" placeholder="Your starting_city ")
        label(for="intermideat_city") Starting City
        input#starting_city(type="text" name="intermideat_city" placeholder="Your intermideat_city ")
        label(for="price") Price
        input#days(type="text" name="price" placeholder="price ")
        label(for="days") Days
        input#days(type="text" name="days" placeholder="Your days ")
        label(for="nights") Nights
        input#nights(type="text" name="nights" placeholder="Your nights ")
        label(for="description") Description
        input#description(type="text" name="description" placeholder="Your description ")
        label(for="file") Upload your file
        input#description(type="file" name="file")
        input(type="submit" value="Submit")



